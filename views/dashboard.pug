extends layout.pug

block content
    style
        include ./styles/dashboard.css

    div#dashboard-page
        div#pending-assignments
            h3 Pending Assignments
            for assignment in assignments
                if !assignment.submitted
                    p=assignment.assignments.title
        div#submitted-assignments
            h3 Submitted Assignments
            for assignment in assignments
                if assignment.submitted
                    p=assignment.assignments.title