extends layout.pug

block content
    style
        include ./styles/login.css

    div.login-page
        form(method="POST" action="/login")
            h2 Login
            if message
                p.error=message
            input(type="email" name="email" placeholder="email")
            input(type="password" name="password" placeholder="********")
            button Login
            a(href="/signup") Don't have an account? Sign up
