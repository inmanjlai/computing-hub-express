        script(src="https://kit.fontawesome.com/264882c67d.js" crossorigin="anonymous")

        style
            include ./styles/global.css
            include ./styles/nav.css
    body
        nav
            a.logo(href='/') Computing Hub
            ul.navigation-links
                if user
                    a(href='/dashboard') Dashboard
                    a#logout-button(href='/logout') Logout
                else
                    a(href='/login') Login
                    a(href='/signup') Sign up

        block content

        div#notification="<insert message here>"

        script
            include ./scripts/index.js
